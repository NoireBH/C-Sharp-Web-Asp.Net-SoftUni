@model ProductViewModel

@{
	ViewBag.Title = $"Product N. {Model.Id}";
}

<div class = "card">
	<div class = "card-header">@ViewBag.Title</div>
	<div class = "card-body">
		<h5 class = "product-name">Product Name: @Model.Name</h5>
		<p class = "product-price">Price: @Model.Price lv.</p>
	</div>
</div>
