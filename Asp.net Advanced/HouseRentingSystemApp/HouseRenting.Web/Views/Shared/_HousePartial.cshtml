@model HouseAllViewModel
@inject IAgentService agentService
@inject IHouseService houseService
@{
	bool isAgent = await agentService.ExistsByIdAsync(User.GetId());
	bool isRenterOfHouse = await houseService.IsRentedByCurrentUserAsync(Model.Id, User.GetId());
	bool isOwner = await agentService.HasHouseByIdAsync(Model.Id, User.GetId());
}


<div class="col-md-4">
	<div class="card mb-3">
		<img class="card-img-top" src="@Model.ImageUrl" alt="House Image">
		<div class="card-body text-center">
			<h4>@Model.Title</h4>
			<h6>Address: <b>@Model.Address</b></h6>
			<h6>
				Price Per Month:
				<b>@String.Format("{0:f2}", Model.PricePerMonth) BGN</b>
			</h6>
			<h6>(@(Model.IsRented ? "Rented" : "Not Rented"))</h6>
			<br />
			<a asp-area="" asp-controller="House" asp-action="Details" asp-route-id="@Model.Id"
			   class="btn btn-success">Details</a>
			@if (this.User.Identity.IsAuthenticated)
			{
				@if (isOwner || User.IsAdmin())
				{
					<a asp-area="" asp-controller="House" asp-action="Edit" asp-route-id="@Model.Id"
					   class="btn btn-warning">Edit</a>
					<a asp-area="" asp-controller="House" asp-action="Delete" asp-route-id="@Model.Id"
					   class="btn btn-danger">Delete</a>
				}

				<p></p>

				@if (!Model.IsRented)
				{
					@if (isAgent && !isOwner || User.IsAdmin() && !isOwner)
					{
						<form class="input-group-sm" asp-area="" asp-controller="House" asp-action="Rent"
							  asp-route-id="@Model.Id" method="post">
							<input class="btn btn-primary" type="submit" value="Rent" />
						</form>
					}
				}
				else
				{
					@if (isRenterOfHouse && !isOwner || 
					User.IsAdmin() && isRenterOfHouse && !isOwner)
					{
						<form asp-area="" asp-controller="House" asp-action="Leave"
							  asp-route-id="@Model.Id" method="post">
							<input class="btn btn-primary" type="submit" value="Leave" />
						</form>
					}
				}
			}
		</div>
	</div>
</div>